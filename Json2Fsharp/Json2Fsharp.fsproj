<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net6.0</TargetFramework>
        <PackAsTool>true</PackAsTool>
        <ToolCommandName>json2fsharp</ToolCommandName>
        <PackageOutputPath>./nupkg</PackageOutputPath>
        <PackageProjectUrl>https://github.com/nr-4/Json2Fsharp</PackageProjectUrl>
        <PackageId>json2fsharp</PackageId>
        <PackageLicense>https://raw.githubusercontent.com/nr-4/Json2Fsharp/master/License.txt</PackageLicense>
        <License>https://raw.githubusercontent.com/nr-4/Json2Fsharp/master/License.txt</License>
        <Version>1.0.3</Version>
        <Authors>nr-4</Authors>
        <Title>Json2Fsharp</Title>
        <Description>Json to F# Code Generator</Description>
        <PackageReadmeFile>readme.md</PackageReadmeFile>
    </PropertyGroup>

    <ItemGroup>
        <Compile Include="FSharpCodeWriter.fs" />
        <Compile Include="Program.fs" />
        <None Include="docs/readme.md" Pack="true" PackagePath="\"/>
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Json2CSharpCodeGenerator\JsonClassGeneratorLib\JsonClassGeneratorLib.csproj" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="CommandLineParser.FSharp" Version="2.8.0" />
      <PackageReference Include="System.Security.Permissions" Version="6.0.0" />
    </ItemGroup>

</Project>
